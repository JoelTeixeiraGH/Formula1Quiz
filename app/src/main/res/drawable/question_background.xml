<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:angle="315"
                android:startColor="#BEE2F1"
                android:centerColor="#89E0FB"
                android:endColor="#003E81"
                android:type="linear"
                />
        </shape>
    </item>
    <item
        android:bottom="25dp"
        android:left="25dp"
        android:right="25dp"
        android:top="25dp">
        <shape>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

            <solid android:color="#23FFFFFF" />

            <corners android:radius="60dp" />
        </shape>
    </item>
    <item
        android:bottom="20dp"
        android:left="20dp"
        android:right="20dp"
        android:top="20dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#17FFF9F9"/>

            <stroke android:width="4dp"
                android:color="#59FFFFFF" />

            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />

            <corners android:radius="50dp" />
        </shape>
    </item>
</layer-list>